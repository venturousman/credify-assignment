{
  "openapi": "3.0.1",
  "info": {
    "title": "Account creation API",
    "description": "This is an API created with Express.js.",
    "contact": {
      "email": "nguyenhoangtin291@gmail.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "user",
      "description": "Operations about user"
    }
  ],
  "paths": {
    "/send": {
      "post": {
        "tags": [
          "verification"
        ],
        "summary": "Send the verification code to user's phone number",
        "operationId": "sendCode",
        "requestBody": {
          "description": "Verification schema object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/src/schemas/verification"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Send verification code successfully",
            "content": {
              "application/json": {
                "schema": {
                  "result": {
                    "type": "object",
                    "properties": {
                      "phone": {
                        "type": "string"
                      },
                      "status": {
                        "type": "string"
                      },
                      "valid": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/verify": {
      "post": {
        "tags": [
          "verification"
        ],
        "summary": "Verify the verification code from user input",
        "operationId": "verifyCode",
        "requestBody": {
          "description": "Verification schema object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/src/schemas/verification"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "result": {
                    "type": "object",
                    "properties": {
                      "user": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "phone": {
                            "type": "string"
                          }
                        }
                      },
                      "status": {
                        "type": "string"
                      },
                      "valid": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "province": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "postalCode": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          }
        }
      }
    }
  }
}